{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('https://static.vecteezy.com/system/resources/previews/010/081/678/non_2x/abstract-gradient-green-light-background-free-vector.jpg');
            background-size: 100% auto; /* Étire l'image en hauteur */
            background-position: center;
            /* Ajoutez d'autres propriétés CSS si nécessaire */
        }
    </style>
{% endblock %}

{% block body %}
    <img src="https://www.creativefabrica.com/wp-content/uploads/2022/09/25/Head-Wolf-Logo-Design-Inspiration-Graphics-39255511-2-580x387.jpg" alt="Logo" class="logo"><br>
    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5">Create User</h3>
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mdp) }}
                    {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.mail) }}
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                    <a class="btn btn-danger mt-2 text-white" href="{{ path('welcome') }}">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
